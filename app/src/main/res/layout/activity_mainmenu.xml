<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.s215131746.driplit.Mainmenu"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/txtGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/disco"
            android:text="@string/app_name"
            android:textAllCaps="false"
            android:textColor="@color/lightdarkerorange"
            android:textSize="34sp"
            android:textStyle="bold"
            tools:targetApi="jelly_bean" />

</RelativeLayout>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:padding="14dp"
        android:rowCount="3">
        <!-- Row 1-->
        <android.support.v7.widget.CardView
            android:layout_width="1dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp" tools:targetApi="lollipop">

            <Button
                android:id="@+id/btnRecordIntake"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/shade1"
                android:text="@string/record_intake"
                android:onClick="RecordScreen"
                />
        </android.support.v7.widget.CardView>
        <!--Column 1 -->
        <!--Row 1-->
        <android.support.v7.widget.CardView
            android:layout_width="1dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp" tools:targetApi="lollipop">

            <Button
                android:id="@+id/btnReportLeak"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/shade2"
                android:text="@string/report_leak"
                android:onClick="ReportScreen"
                />
        </android.support.v7.widget.CardView>
        <!--Column 2 -->
        <!--Row2-->
        <android.support.v7.widget.CardView
            android:layout_width="1dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp" tools:targetApi="lollipop">

            <Button
                android:id="@+id/btnEditProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/shade4"
                android:text="@string/edit_profile"
                android:onClick="EditProfileScreen" />


        </android.support.v7.widget.CardView>
        <!--Column1-->
        <!--Row2-->
        <android.support.v7.widget.CardView
            android:layout_width="1dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp" tools:targetApi="lollipop">

            <Button
                android:id="@+id/btnTrend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/shade5"
                android:text="@string/trend"
                android:onClick="TrendScreen"
                />
        </android.support.v7.widget.CardView>
        <!--Column2-->
        <!--Row3-->
        <android.support.v7.widget.CardView
            android:layout_width="1dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp" tools:targetApi="lollipop">

            <Button
                android:id="@+id/btnTipsTricks"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/shade6"
                android:text="@string/tricks_tips"
                android:onClick="TipScreen"
                />
        </android.support.v7.widget.CardView>
        <!--Column1-->
        <!--Row3-->
        <android.support.v7.widget.CardView
            android:layout_width="1dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp" tools:targetApi="lollipop">

            <Button
                android:id="@+id/btnTOfDay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_blue_bright"
                android:text="@string/tipoftheday"
                android:onClick="FactOfTheDayScreen"
                />
        </android.support.v7.widget.CardView>
        <!--Column2-->


    </GridLayout>


</LinearLayout>












