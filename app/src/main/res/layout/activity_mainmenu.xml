<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.s215131746.driplit.Mainmenu"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/txtGrid"
            android:text="DRIPLIT"
            android:textSize="34sp"
            android:textColor="@color/lightdarkerorange"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

</RelativeLayout>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:padding="14dp"
        android:rowCount="3">
        <!-- Row 1-->
        <android.support.v7.widget.CardView
            android:layout_width="1dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="@string/record_intake"
                android:textSize="20sp"/>
        </android.support.v7.widget.CardView>
        <!--Column 1 -->
        <!--Row 1-->
        <android.support.v7.widget.CardView
            android:layout_width="1dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="@string/report_leak"
                android:textSize="20sp"/>
        </android.support.v7.widget.CardView>
        <!--Column 2 -->
        <!--Row2-->
        <android.support.v7.widget.CardView
            android:layout_width="1dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="@string/edit_profile"
                android:textSize="20sp"/>
        </android.support.v7.widget.CardView>
        <!--Column1-->
        <!--Row2-->
        <android.support.v7.widget.CardView
            android:layout_width="1dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="@string/trend"
                android:textSize="20sp"/>
        </android.support.v7.widget.CardView>
        <!--Column2-->
        <!--Row3-->
        <android.support.v7.widget.CardView
            android:layout_width="1dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="@string/tricks_tips"
                android:textSize="20sp"/>
        </android.support.v7.widget.CardView>
        <!--Column1-->
        <!--Row3-->
        <android.support.v7.widget.CardView
            android:layout_width="1dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="@string/tipoftheday"
                android:textSize="20sp"/>
        </android.support.v7.widget.CardView>
        <!--Column2-->


    </GridLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_margin="16dp"
        android:orientation="vertical">



    </LinearLayout>


</LinearLayout>












